package EX3TI;

public class Livro {
    private int id;
    private String nome;
    private double preco;
    private String genero;

    public Livro() {
        super();
        this.nome = "";
        this.preco = -1;
        this.genero = "";
    }

    public Livro(String nome, double preco, String genero) {
        super();
        this.nome = nome;
        this.preco = preco;
        this.genero = genero;
    }

    public int getId() {
        return id;
    }

    public void setId(int id) {
        this.id = id;
    }

    public String getNome() {
        return nome;
    }

    public void setNome(String nome) {
        this.nome = nome;
    }

    public double getPreco() {
        return preco;
    }

    public void setPreco(double preco) {
        this.preco = preco;
    }

    public String getGenero() {
        return genero;
    }

    public void setGenero(String genero) {
        this.genero = genero;
    }

    @Override
    public String toString() {
        return "Livro [nome=" + nome + ", preco=" + preco + ", genero=" + genero + "]";
    }
}

